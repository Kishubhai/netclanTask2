<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:text="Select Your Availability"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        >

        <!-- Inside text input layout add
              an auto complete text view
                and make its input type to none-->
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:background="@drawable/et_style1"
            android:text="Available | Hey let Us Connect"
            />


    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Status"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:textSize="15dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        app:counterEnabled="true"
        app:counterMaxLength="250"
        >
        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_style1"
            android:textSize="15dp"
            android:text="Hi community! I am open to new connections"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Hyper local Distace"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"/>
    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:min="1"
        android:max="100"
        android:progress="7"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:text="1 Km"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="250dp"
            android:text="100 Km"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:layout_marginTop="20dp"
        android:text="Select Purpose"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        >

        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Coffee" />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Bussiness" />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Hobbies"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Friendship" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        >

        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Movies" />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Dining" />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Dating"/>
        <Button
            app:backgroundTint="@color/white"
            android:background="@drawable/style2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:textSize="10dp"
            android:text="Matrimony" />
    </LinearLayout>

    <Button
        app:backgroundTint="@color/darkblue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        android:layout_width="190dp"
        android:layout_height="35dp"
        android:background="@drawable/et_style"

        android:text="Save &amp; Explore" />


</LinearLayout>